notes = [
    {"Имя": "Алексей", "Заголовок": "Список покупок", "Описание": "Купить продукты на неделю"},
    {"Имя": "Мария", "Заголовок": "Учеба", "Описание": "Подготовиться к экзамену"}
]
while True:
    # Показ текущих заметок
    print("\nТекущие заметки:")
    for i, note in enumerate(notes):
        print(f"{i + 1}. Имя: {note['Имя']}\n   Заголовок: {note['Заголовок']}\n   Описание: {note['Описание']}\n")
    # Запрос у пользователя критерия для удаления
    criterion = input("Введите имя пользователя или заголовок для удаления заметки: ").strip()
    # Удаление заметок по критерию
    notes = [note for note in notes if note['Имя'] != criterion and note['Заголовок'] != criterion]
    if len(notes) < len(notes):
        print("Успешно удалено. Остались следующие заметки:")
    else:
        print("Заметок с таким именем пользователя или заголовком не найдено.")
    # Отображение оставшихся заметок
    if notes:
         for i, note in enumerate(notes):
            print(f"{i + 1}. Имя: {note['Имя']}\n   Заголовок: {note['Заголовок']}\n   Описание: {note['Описание']}\n")
    else:
        print("Заметки отсутствуют.")
    # Запрос на продолжение
    if input("Хотите продолжить? (да/нет): ").strip().lower() != 'да':
        break
